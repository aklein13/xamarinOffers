<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App3.Views.ItemDetailPage"
             >
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Skopiuj do schowka" Clicked="CopyToClipboard" />
        <ToolbarItem Text="Otwórz w przeglądarce" Clicked="OpenInBrowser" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
        <StackLayout Spacing="20" Padding="15">
            <Image Source="{Binding Item.Images}"/>
            <Label Text="{Binding Item.Title}" FontSize="Large"/>
            <Label Text="{Binding Item.City}" FontSize="Medium"/>
            <Label Text="{Binding Item.Price, StringFormat='{0} zł'}" FontSize="Medium"/>
            <Label Text="Opis:" FontSize="Medium" />
            <Label Text="{Binding Item.Description}" FontSize="Small"/>
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>